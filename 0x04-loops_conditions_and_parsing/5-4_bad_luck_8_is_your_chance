#!/usr/bin/env bash
# Script: 5-4_bad_luck_8_is_your_chance
# Description: This script loops from 1 to 10 and displays different messages based on loop iteration.

# Initialize counter
counter=1

# Using a while loop to iterate from 1 to 10
while [ $counter -le 10 ]; do
    # Check conditions based on loop iteration
    if [ $counter -eq 4 ]; then
        echo "bad luck"
    elif [ $counter -eq 8 ]; then
        echo "good luck"
    else
        echo "Best School"
    fi
    
    # Increment the counter
    ((counter++))
done
